{
  "name": "velup",
  "version": "1.0.0-alpha.3",
  "description": "CLI tool to install and configure code quality dependencies for projects",
  "bin": {
    "velup": "./bin/index.js"
  },
  "types": "./bin/types/index.d.ts",
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "**/*.{js,jsx,ts,tsx,css,scss,md}": "prettier --write --ignore-unknown"
  },
  "scripts": {
    "dev": "cross-env DEBUG_MODE=true ts-node --files ./src/index.ts",
    "clean": "rimraf dist",
    "build": "pnpm clean && tsc && pnpm post-build",
    "link": "pnpm build && pnpm link ./dist",
    "prepare": "husky install",
    "post-build": "ts-node ./scripts/post-build.ts"
  },
  "keywords": [],
  "author": "Marcos Mellado <marcos@mellado.dev>",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@commitlint/prompt": "^17.6.6",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^10.0.1",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "^11.0.4",
    "@types/clear": "^0.1.2",
    "@types/docopt": "^0.6.33",
    "@types/figlet": "^1.5.6",
    "@types/fs-extra": "^11.0.1",
    "@types/lodash.find": "^4.6.7",
    "@types/lodash.indexof": "^4.0.7",
    "@types/lodash.isequal": "^4.5.6",
    "@types/lodash.merge": "^4.6.7",
    "@types/lodash.mergewith": "^4.6.7",
    "@types/lodash.unionwith": "^4.6.7",
    "@types/node": "^20.4.2",
    "@types/progress": "^2.0.5",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-sonarjs": "^0.19.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "semantic-release": "^21.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@inquirer/prompts": "^3.0.0",
    "chalk": "^4.1.2",
    "clear": "^0.1.0",
    "docopt": "^0.6.2",
    "figlet": "^1.6.0",
    "fs-extra": "^11.1.1",
    "handlebars": "^4.7.7",
    "lodash.find": "^4.6.0",
    "lodash.indexof": "^4.0.5",
    "lodash.isequal": "^4.5.0",
    "lodash.mergewith": "^4.6.2",
    "lodash.unionwith": "^4.6.0",
    "progress": "^2.0.3"
  }
}
